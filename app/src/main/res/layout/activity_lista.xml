<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222020"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btCadastrar"
        style="@style/ButtonLista"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:insetTop="4dp"
        android:text="+"
        android:textAlignment="center"
        android:textSize="34sp"
        android:paddingVertical="0dp"
        android:paddingHorizontal="0dp"
        />

    <LinearLayout
        style="@style/ContainerLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:paddingVertical="10dp"
            android:text="Projeto 01"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:paddingVertical="10dp"
            android:text="Prazo: 01/06/2023"
            android:textAlignment="center"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        style="@style/ContainerLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:paddingVertical="10dp"
            android:text="Projeto 02"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:paddingVertical="10dp"
            android:text="Prazo: 25/04/2023"
            android:textAlignment="center"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        style="@style/ContainerLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:paddingVertical="10dp"
            android:text="Teste Projeto"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:paddingVertical="10dp"
            android:text="Prazo: 17/04/2023"
            android:textAlignment="center"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        style="@style/ContainerLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:paddingVertical="10dp"
            android:text="Projeto teste"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:verticalScrollbarPosition="left" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:paddingVertical="10dp"
            android:text="Prazo: 30/05/2023"
            android:textAlignment="center"
            android:textColor="@color/white" />

    </LinearLayout>


</LinearLayout>